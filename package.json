    "webpack-merge": "4.2.2"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "author": {
    "name": "Karolis Kazlauskis",
    "email": "karolis@kazlauskis.com",
    "url": "https://kazlauskis.com"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      [
        "@babel/env",
        {
          "targets": {
            "android": "5.1",
            "ios": "10.2"
          },
          "modules": "commonjs",
          "corejs": "3.0.0",
          "useBuiltIns": "usage"
        }
      ]
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ],
          "alias": {
            "@flumens": "./src/common/flumens"
          }
        }
      ],
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      "@babel/plugin-transform-exponentiation-operator",
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ],
      "@babel/plugin-syntax-dynamic-import"
    ],
    "env": {
      "test": {
        "plugins": [
          [
            "istanbul",
            {
              "exclude": [
                "src/**/*tests*",
                "src/**/*_view*",
                "src/app.js",
                "dist",
                "test"
              ]
            }
          ]
        ]
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "mocha": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2016,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "extends": [
      "airbnb",
      "prettier"
    ],
    "rules": {
      "no-unused-vars": 1,
      "prefer-destructuring": 1,
      "no-use-before-define": 1,
      "no-param-reassign": 1,
      "import/extensions": 1,
      "react/no-array-index-key": 1,
      "react/no-access-state-in-setstate": 1,
      "import/no-unresolved": 1,
      "no-plusplus": 0,
      "react/forbid-prop-types": 0,
      "jsx-a11y/anchor-is-valid": 1,
      "jsx-a11y/click-events-have-key-events": 1,
      "jsx-a11y/no-static-element-interactions": 1,
      "jsx-a11y/no-noninteractive-element-interactions": 1,
      "jsx-a11y/no-autofocus": 0,
      "jsx-a11y/alt-text": 1,
      "import/no-mutable-exports": 1,
      "no-case-declarations": 1,
      "jsx-a11y/anchor-has-content": 1,
      "react/no-this-in-sfc": 1,
      "react/jsx-filename-extension": 0,
      "react/require-default-props": 0,
      "react/sort-comp": 0,
      "react/destructuring-assignment": 0,
      "react/button-has-type": 0,
      "no-unused-expressions": [
        2,
        {
          "allowShortCircuit": true,
          "allowTernary": true
        }
      ],
      "complexity": [
        1,
        20
      ],
      "eqeqeq": [
        1,
        "smart"
      ],
      "guard-for-in": 1,
      "no-constant-condition": 2,
      "no-console": 1,
      "no-redeclare": [
        2,
        {
          "builtinGlobals": true
        }
      ],
      "object-curly-spacing": [
        2,
        "always"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "comma-dangle": [
        2,
        "always-multiline"
      ],
      "key-spacing": [
        2,
        {
          "afterColon": true,
          "mode": "minimum"
        }
      ],
      "no-multiple-empty-lines": [
        2,
        {
          "max": 2
        }
      ],
      "no-mixed-spaces-and-tabs": [
        2,
        "smart-tabs"
      ],
      "max-nested-callbacks": [
        1,
        10
      ],
      "consistent-this": [
        1,
        "self"
      ],
      "no-unexpected-multiline": 1,
      "no-extra-semi": 1,
      "no-negated-in-lhs": 1,
      "linebreak-style": 0,
      "no-underscore-dangle": 0,
      "react/jsx-props-no-spreading": 0,
      "react/state-in-constructor": 0,
      "react/static-property-placement": 0,
      "react/jsx-one-expression-per-line": [
        1,
        {
          "allow": "single-child"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.js"
        ],
        "rules": {
          "no-unused-expressions": 0
        }
      }
    ],
    "globals": {
      "__ENV__": true,
      "__DEV__": true,
      "__TEST__": true,
      "__PROD__": true,
      "t": true,
      "browser": true,
      "sinon": true,
      "expect": true,
      "cordova": true
    },
    "settings": {
      "import/resolver": {
        "node": {},
        "webpack": {
          "config": "webpack.config.js"
        }
      },
      "react": {
        "version": "16.8"
      }
    }
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "jsxBracketSameLine": false,
    "trailingComma": "es5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NERC-CEH/irecord-app"
  },
  "bugs": {
    "url": "https://github.com/NERC-CEH/irecord-app/issues"
  },
  "licenses": [
    {
      "type": "GNU GPL v3",
      "url": "http://www.gnu.org/licenses/gpl.html"
    }
  ],
  "keywords": [
    "irecord",
    "biological",
    "recording",
    "mobile",
    "app",
    "offline",
    "ceh",
    "brc"
  ],
  "bit": {
    "env": {},
    "componentsDefaultDirectory": "src/common/Lib/{name}",
    "packageManager": "npm"
  }
}
